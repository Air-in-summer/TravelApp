<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TravelApplication.ViewModels"
             xmlns:models="clr-namespace:TravelApplication.Models"
             x:Class="TravelApplication.Pages.PreferenceRecommendationsPage"
             x:DataType="viewmodel:PreferenceRecommendationsViewModel"
             Title="{Binding Title}"
             BackgroundColor="#F5F5F5">
    
    <ScrollView>
        <VerticalStackLayout Padding="20,15" Spacing="20">
            
            <!-- Header -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Discover Places"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#212121"/>
                <Label Text="Based on your preferences"
                       FontSize="14"
                       TextColor="#757575"/>
            </VerticalStackLayout>
            
            <!-- Loading -->
            <ActivityIndicator IsVisible="{Binding IsBusy}"
                             IsRunning="{Binding IsBusy}"
                             Color="#2196F3"
                             HeightRequest="50"/>
            
            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="#C62828"
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,10"/>

            
            <!-- Preference Groups -->
            <CollectionView ItemsSource="{Binding PreferenceGroups}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:PreferenceGroup">
                        <VerticalStackLayout Spacing="12" Margin="0,0,0,25">
                            
                            <!-- Preference Header -->
                            <HorizontalStackLayout Spacing="10">
                                <Border WidthRequest="4"
                                        HeightRequest="24"
                                        BackgroundColor="#2196F3"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="2"/>
                                    </Border.StrokeShape>
                                </Border>
                                <Label Text="{Binding Preference}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#212121"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            
                            <!-- Horizontal Scroll of Places -->
                            <CollectionView ItemsSource="{Binding Places}"
                                          ItemsLayout="HorizontalList"
                                          HeightRequest="280">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:PlaceRecommendation">
                                        <Border Padding="0"
                                                Margin="0,0,12,0"
                                                BackgroundColor="White"
                                                StrokeThickness="0"
                                                WidthRequest="220">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="16"/>
                                            </Border.StrokeShape>
                                            <Border.Shadow>
                                                <Shadow Brush="Black" Opacity="0.1" Radius="12" Offset="0,4"/>
                                            </Border.Shadow>
                                            
                                            <VerticalStackLayout Spacing="0">
                                                <!-- Header Section -->
                                                <Border Padding="15,15,15,12"
                                                        BackgroundColor="#E3F2FD"
                                                        StrokeThickness="0">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="16,16,0,0"/>
                                                    </Border.StrokeShape>
                                                    <VerticalStackLayout Spacing="6">
                                                        <!-- Place Name -->
                                                        <Label Text="{Binding Name}"
                                                               FontSize="17"
                                                               FontAttributes="Bold"
                                                               TextColor="#1565C0"
                                                               LineBreakMode="WordWrap"
                                                               MaxLines="2"
                                                               HeightRequest="48"/>
                                                        
                                                        <!-- Category Badge -->
                                                        <Border Padding="8,4"
                                                                BackgroundColor="White"
                                                                StrokeThickness="0"
                                                                HorizontalOptions="Start">
                                                            <Border.StrokeShape>
                                                                <RoundRectangle CornerRadius="10"/>
                                                            </Border.StrokeShape>
                                                            <Label Text="{Binding Category}"
                                                                   FontSize="11"
                                                                   FontAttributes="Bold"
                                                                   TextColor="#1976D2"/>
                                                        </Border>
                                                    </VerticalStackLayout>
                                                </Border>
                                                
                                                <!-- Content Section -->
                                                <VerticalStackLayout Padding="15" Spacing="10">
                                                    <!-- Distance -->
                                                    <Border Padding="10,6"
                                                            BackgroundColor="#FFF3E0"
                                                            StrokeThickness="0">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="8"/>
                                                        </Border.StrokeShape>
                                                        <HorizontalStackLayout Spacing="6" HorizontalOptions="Center">
                                                            <Label Text="ðŸ“"
                                                                   FontSize="14"
                                                                   VerticalOptions="Center"/>
                                                            <Label Text="{Binding DistanceText}"
                                                                   FontSize="13"
                                                                   TextColor="#F57C00"
                                                                   FontAttributes="Bold"
                                                                   VerticalOptions="Center"/>
                                                        </HorizontalStackLayout>
                                                    </Border>
                                                    
                                                    <!-- Address -->
                                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="6">
                                                        <Label Grid.Column="0"
                                                               Text="ðŸ“"
                                                               FontSize="12"
                                                               VerticalOptions="Start"/>
                                                        <Label Grid.Column="1"
                                                               Text="{Binding Address}"
                                                               FontSize="12"
                                                               TextColor="#616161"
                                                               LineBreakMode="WordWrap"
                                                               MaxLines="2"
                                                               HeightRequest="36"/>
                                                    </Grid>
                                                    
                                                    <!-- Add to Trip Button -->
                                                    <Border StrokeThickness="0"
                                                            BackgroundColor="#4CAF50"
                                                            Margin="0,5,0,0">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="10"/>
                                                        </Border.StrokeShape>
                                                        <Border.Shadow>
                                                            <Shadow Brush="#4CAF50" Opacity="0.3" Radius="8" Offset="0,3"/>
                                                        </Border.Shadow>
                                                        <Border.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PreferenceRecommendationsViewModel}}, Path=AddToTripCommand}"
                                                                                  CommandParameter="{Binding .}"/>
                                                        </Border.GestureRecognizers>
                                                        <Label Text="âž• Add to Trip"
                                                               FontSize="13"
                                                               FontAttributes="Bold"
                                                               TextColor="White"
                                                               HorizontalOptions="Center"
                                                               Padding="0,10"/>
                                                    </Border>
                                                </VerticalStackLayout>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
