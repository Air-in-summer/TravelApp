<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TravelApplication.ViewModels"
             xmlns:models="clr-namespace:TravelApplication.Models"
             x:Class="TravelApplication.Pages.MajorPage.TripDetailPage"
             x:DataType="viewmodels:TripDetailViewModel"
             BackgroundColor="#F5F5F5"
             Title="{Binding Title}">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="âœï¸ Edit" Command="{Binding EditTripCommand}"/>
        <ToolbarItem Text="ðŸ“„ PDF" Command="{Binding ExportToPdfCommand}"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="15">
            
            <!-- Loading Indicator -->
            <ActivityIndicator IsVisible="{Binding IsBusy}" 
                             IsRunning="{Binding IsBusy}"
                             Color="#2196F3"
                             HeightRequest="50"
                             VerticalOptions="Center"/>

            <!-- Trip Info Card -->
            <Border StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="20"
                    IsVisible="{Binding IsNotBusy}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="12" Offset="0,4"/>
                </Border.Shadow>
                
                <VerticalStackLayout Spacing="12">
                    <!-- Title -->
                    <Label Text="{Binding CurrentTrip.Title}"
                           FontAttributes="Bold"
                           FontSize="26"
                           TextColor="#212121"/>
                    
                    <!-- Destination -->
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="ðŸ“"
                               FontSize="18"
                               VerticalOptions="Center"/>
                        <Label Text="{Binding CurrentTrip.DestinationName}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#2196F3"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    
                    <!-- Description -->
                    <Label Text="{Binding CurrentTrip.Description}"
                           FontSize="15"
                           TextColor="#616161"
                           LineBreakMode="WordWrap"/>
                    
                    <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,8"/>
                    
                    <!-- Dates -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Border Grid.Column="0"
                                Padding="12,10"
                                BackgroundColor="#E8F5E9"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Start Date"
                                       FontSize="12"
                                       TextColor="#2E7D32"/>
                                <Label Text="{Binding CurrentTrip.StartDate, StringFormat='{0:MMM dd, yyyy}'}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#2E7D32"/>
                            </VerticalStackLayout>
                        </Border>
                        
                        <Border Grid.Column="1"
                                Padding="12,10"
                                BackgroundColor="#FFEBEE"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="4">
                                <Label Text="End Date"
                                       FontSize="12"
                                       TextColor="#C62828"/>
                                <Label Text="{Binding CurrentTrip.EndDate, StringFormat='{0:MMM dd, yyyy}'}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#C62828"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Budget Overview Card -->
            <Border StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="20"
                    IsVisible="{Binding IsNotBusy}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="12" Offset="0,4"/>
                </Border.Shadow>
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ’° Budget Overview"
                           FontAttributes="Bold"
                           FontSize="20"
                           TextColor="#212121"/>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <!-- Budget -->
                        <Border Grid.Column="0"
                                Padding="15,12"
                                BackgroundColor="#E3F2FD"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Budget"
                                       FontSize="13"
                                       TextColor="#1976D2"/>
                                <Label Text="{Binding CurrentTrip.Budget, StringFormat='{0:C}'}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#1976D2"/>
                            </VerticalStackLayout>
                        </Border>
                        
                        <!-- Total Cost -->
                        <Border Grid.Column="1"
                                Padding="15,12"
                                BackgroundColor="#E8F5E9"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Total Cost"
                                       FontSize="13"
                                       TextColor="#2E7D32"/>
                                <Label Text="{Binding TotalCost, StringFormat='{0:C}'}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#2E7D32"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                    
                    <!-- Budget Status -->
                    <Border Padding="12,10"
                            StrokeThickness="0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BackgroundColor" Value="#E8F5E9"/>
                                <Style.Triggers>
                                    <DataTrigger TargetType="Border" Binding="{Binding IsOverBudget}" Value="True">
                                        <Setter Property="BackgroundColor" Value="#FFEBEE"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label HorizontalTextAlignment="Center"
                               FontSize="14"
                               FontAttributes="Bold">
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Setter Property="TextColor" Value="#2E7D32"/>
                                    <Setter Property="Text" Value="âœ“ Within budget!"/>
                                    <Style.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding IsOverBudget}" Value="True">
                                            <Setter Property="TextColor" Value="#C62828"/>
                                            <Setter Property="Text" Value="âš  Over budget!"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*,*" 
                  ColumnSpacing="10" 
                  IsVisible="{Binding IsNotBusy}">
                <Border Grid.Column="0"
                        StrokeThickness="0"
                        BackgroundColor="#F57C00"
                        HeightRequest="70">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#F57C00" Opacity="0.3" Radius="8" Offset="0,4"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnViewMapClicked"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="6" VerticalOptions="Center">
                        <Label Text="ðŸ—ºï¸"
                               FontSize="26"
                               HorizontalOptions="Center"/>
                        <Label Text="Map"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
                
                <Border Grid.Column="1"
                        StrokeThickness="0"
                        BackgroundColor="#2196F3"
                        HeightRequest="70">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#2196F3" Opacity="0.3" Radius="8" Offset="0,4"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCheckWeatherClicked"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="6" VerticalOptions="Center">
                        <Label Text="â˜€ï¸"
                               FontSize="26"
                               HorizontalOptions="Center"/>
                        <Label Text="Weather"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
                
                <Border Grid.Column="2"
                        StrokeThickness="0"
                        BackgroundColor="#9C27B0"
                        HeightRequest="70">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#9C27B0" Opacity="0.3" Radius="8" Offset="0,4"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnYourPreferencesClicked"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="6" VerticalOptions="Center">
                        <Label Text="â­"
                               FontSize="26"
                               HorizontalOptions="Center"/>
                        <Label Text="Preferences"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Stops Header -->
            <HorizontalStackLayout Spacing="10" 
                                  Margin="5,10,0,5"
                                  IsVisible="{Binding IsNotBusy}">
                <Label Text="ðŸ“Œ Stops"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#212121"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- Stops List -->
            <CollectionView ItemsSource="{Binding Stops}"
                          SelectionMode="None"
                          IsVisible="{Binding IsNotBusy}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        Spacing="10"
                                        Padding="20">
                        <Label Text="ðŸ“"
                               FontSize="48"
                               HorizontalOptions="Center"/>
                        <Label Text="No stops yet"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#212121"
                               HorizontalOptions="Center"/>
                        <Label Text="Add your first stop below!"
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Stop">
                        <Border Margin="0,0,0,12"
                                Padding="0"
                                StrokeThickness="0"
                                BackgroundColor="White">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.08" Radius="10" Offset="0,2"/>
                            </Border.Shadow>
                            
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                                  Padding="18"
                                  RowSpacing="10">
                                
                                <!-- Header: Location + Actions -->
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding Location}"
                                           FontAttributes="Bold"
                                           FontSize="18"
                                           TextColor="#212121"
                                           VerticalOptions="Center"/>
                                    
                                    <HorizontalStackLayout Grid.Column="1" Spacing="5">
                                        <Border WidthRequest="32"
                                                HeightRequest="32"
                                                BackgroundColor="#E3F2FD"
                                                StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="16"/>
                                            </Border.StrokeShape>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TripDetailViewModel}}, Path=EditStopCommand}"
                                                                      CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>
                                            <Label Text="âœï¸"
                                                   FontSize="16"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>
                                        
                                        <Border WidthRequest="32"
                                                HeightRequest="32"
                                                BackgroundColor="#FFEBEE"
                                                StrokeThickness="0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="16"/>
                                            </Border.StrokeShape>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TripDetailViewModel}}, Path=DeleteStopCommand}"
                                                                      CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>
                                            <Label Text="ðŸ—‘ï¸"
                                                   FontSize="16"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>
                                    </HorizontalStackLayout>
                                </Grid>
                                
                                <!-- Address -->
                                <Grid Grid.Row="1" ColumnDefinitions="Auto,*" ColumnSpacing="6">
                                    <Label Grid.Column="0"
                                           Text="ðŸ“"
                                           FontSize="12"
                                           VerticalOptions="Start"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding Address}"
                                           FontSize="14"
                                           TextColor="#424242"
                                           LineBreakMode="WordWrap"/>
                                </Grid>
                                
                                <!-- Notes -->
                                <Label Grid.Row="2"
                                       Text="{Binding Notes}"
                                       FontSize="14"
                                       TextColor="#757575"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2"/>
                                
                                <!-- Date Range -->
                                <Border Grid.Row="3"
                                        Padding="10,8"
                                        BackgroundColor="#FFF3E0"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="ðŸ—“ï¸"
                                               FontSize="14"
                                               VerticalOptions="Center"/>
                                        <Label Text="{Binding ArrivalDate, StringFormat='{0:dd/MM HH:mm}'}"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="#F57C00"
                                               VerticalOptions="Center"/>
                                        <Label Text="â†’"
                                               FontSize="14"
                                               TextColor="#F57C00"
                                               VerticalOptions="Center"/>
                                        <Label Text="{Binding DepartureDate, StringFormat='{0:dd/MM HH:mm}'}"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="#F57C00"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>
                                </Border>
                                
                                <!-- Cost Badge -->
                                <Border Grid.Row="4"
                                        Padding="10,6"
                                        BackgroundColor="#E8F5E9"
                                        StrokeThickness="0"
                                        HorizontalOptions="Start">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="{Binding EstimatedCost, StringFormat='ðŸ’° {0:C}'}"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="#2E7D32"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Add Stop Button -->
            <Border StrokeThickness="0"
                    BackgroundColor="#4CAF50"
                    Margin="0,10,0,0"
                    IsVisible="{Binding IsNotBusy}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#4CAF50" Opacity="0.3" Radius="10" Offset="0,4"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAddStopClicked"/>
                </Border.GestureRecognizers>
                <Label Text="âž• Add Stop"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Padding="0,15"/>
            </Border>
            
            <!-- Suggest Trip Button -->
            <Border StrokeThickness="1"
                    Stroke="#9C27B0"
                    BackgroundColor="Transparent"
                    Margin="0,5,0,10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSuggestTripClicked"/>
                </Border.GestureRecognizers>
                <Label Text="âœ¨ Optimize Itinerary"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#9C27B0"
                       HorizontalOptions="Center"
                       Padding="0,15"/>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>