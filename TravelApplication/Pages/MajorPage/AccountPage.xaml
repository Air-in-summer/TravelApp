<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelApplication.Pages.MajorPage.AccountPage"
             Title="Account"
             BackgroundColor="#F5F5F5">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Label Text="Account Settings"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#212121"
                   Margin="0,10,0,10"/>
            
            <!-- Security Section -->
            <Border StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="10" Offset="0,2"/>
                </Border.Shadow>
                
                <VerticalStackLayout Spacing="0">
                    <!-- Section Header -->
                    <Label Text="Security"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#757575"
                           Margin="20,15,20,10"/>
                    
                    <!-- Change Password Item -->
                    <Border StrokeThickness="0"
                            BackgroundColor="Transparent">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnChangePasswordClicked"/>
                        </Border.GestureRecognizers>
                        
                        <Grid Padding="20,15" ColumnDefinitions="Auto,*,Auto">
                            <Border Grid.Column="0"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    BackgroundColor="#FFF3E0"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Label Text="ðŸ”’"
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" 
                                               VerticalOptions="Center"
                                               Margin="15,0,0,0"
                                               Spacing="2">
                                <Label Text="Change Password"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#212121"/>
                                <Label Text="Update your password"
                                       FontSize="13"
                                       TextColor="#9E9E9E"/>
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2"
                                   Text="â€º"
                                   FontSize="24"
                                   TextColor="#BDBDBD"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </Border>
            
            <!-- Danger Zone Section -->
            <Border StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="10" Offset="0,2"/>
                </Border.Shadow>
                
                <VerticalStackLayout Spacing="0">
                    <!-- Section Header -->
                    <Label Text="Danger Zone"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#F44336"
                           Margin="20,15,20,10"/>
                    
                    <!-- Logout Item -->
                    <Border StrokeThickness="0"
                            BackgroundColor="Transparent">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutClicked"/>
                        </Border.GestureRecognizers>
                        
                        <Grid Padding="20,15" ColumnDefinitions="Auto,*,Auto">
                            <Border Grid.Column="0"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    BackgroundColor="#FFEBEE"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Label Text="ðŸšª"
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" 
                                               VerticalOptions="Center"
                                               Margin="15,0,0,0"
                                               Spacing="2">
                                <Label Text="Logout"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#F44336"/>
                                <Label Text="Sign out of your account"
                                       FontSize="13"
                                       TextColor="#9E9E9E"/>
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2"
                                   Text="â€º"
                                   FontSize="24"
                                   TextColor="#BDBDBD"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>