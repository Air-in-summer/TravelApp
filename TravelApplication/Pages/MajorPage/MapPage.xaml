<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             xmlns:viewmodels="clr-namespace:TravelApplication.ViewModels"
             xmlns:models="clr-namespace:TravelApplication.Models"
             x:Class="TravelApplication.Pages.MajorPage.MapPage"
             x:DataType="viewmodels:MapViewModel"
             Title="Map View"
             BackgroundColor="#F0F0F0">
    
    <Grid RowDefinitions="Auto, *">
        <!-- Search Bar -->
        <Border Grid.Row="0" 
                Padding="10"
                BackgroundColor="White"
                Margin="10,10,10,5">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>
            <Grid RowDefinitions="Auto, Auto">
                <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                    <SearchBar Grid.Column="0"
                               x:Name="SearchBar1"
                               Placeholder="Search places..."
                               Text="{Binding SearchQuery}"
                               SearchCommand="{Binding SearchPlacesCommand}"
                               Focused="OnSearchBarFocused"
                               
                               Unfocused="OnSearchBarUnfocused"
                               HorizontalOptions="Fill" />
                    <ActivityIndicator Grid.Column="1"
                                       IsVisible="{Binding IsBusy}"
                                       IsRunning="{Binding IsBusy}"
                                       VerticalOptions="Center"
                                       Margin="10,0,0,0" />
                </Grid>
                
                <!-- Search Results List -->
                <CollectionView Grid.Row="1" 
                                ItemsSource="{Binding SearchResults}"
                                MaximumHeightRequest="200"
                                IsVisible="{Binding IsSearchResultsVisible}"
                                Margin="0,5,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:GeoapifyPlacesResult">
                            <Border Padding="10" 
                                    Margin="0,2"
                                    BackgroundColor="#F5F5F5"
                                    StrokeThickness="0">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnSearchResultTapped" />
                                </Border.GestureRecognizers>
                                <VerticalStackLayout>
                                    <Label Text="{Binding Location}" 
                                           FontAttributes="Bold" 
                                           FontSize="14" />
                                    <Label Text="{Binding Address}" 
                                           FontSize="12" 
                                           TextColor="Gray" />
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Border>

        <!-- Map View -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <mapsui:MapView x:Name="MapControl" 
                           Map="{Binding Map}" />
            
            <ActivityIndicator IsVisible="{Binding IsBusy}"
                             IsRunning="{Binding IsBusy}"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Color="Blue"
                             WidthRequest="50"
                             HeightRequest="50" />
        </Grid>

        <!-- Place Info Popup -->
        <Border Grid.Row="0" 
                Grid.RowSpan="2"
                IsVisible="{Binding IsPlacePopupVisible}"
                BackgroundColor="#80000000"
                Padding="20"
                VerticalOptions="End"
                HorizontalOptions="Center">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ClosePlacePopupCommand}" />
            </Border.GestureRecognizers>
            <Border BackgroundColor="White"
                    Padding="20"
                    MaximumWidthRequest="350"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="15">
                    <Label Text="Place Information" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    
                    <BoxView HeightRequest="1" Color="#EEEEEE" />
                    
                    <VerticalStackLayout Spacing="8">
                        <Label Text="{Binding SelectedPlace.Location}" 
                               FontSize="16" 
                               FontAttributes="Bold" />
                        <Label Text="{Binding SelectedPlace.Address}" 
                               FontSize="14" 
                               TextColor="Gray" />
                        <Label Text="{Binding SelectedPlace.Category}" 
                               FontSize="12" 
                               TextColor="Blue" />
                    </VerticalStackLayout>
                    
                    <BoxView HeightRequest="1" Color="#EEEEEE" />
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button Grid.Column="0"
                                Text="Cancel"
                                Command="{Binding ClosePlacePopupCommand}"
                                BackgroundColor="#E0E0E0"
                                TextColor="Black" />
                        <Button Grid.Column="1"
                                Text="Add Place"
                                Clicked="OnAddPlaceClicked"
                                BackgroundColor="#2196F3"
                                TextColor="White" />
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </Border>
    </Grid>
</ContentPage>


