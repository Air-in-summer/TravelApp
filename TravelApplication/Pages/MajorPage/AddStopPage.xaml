<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TravelApplication.ViewModels"
             x:Class="TravelApplication.Pages.MajorPage.AddStopPage"
             x:DataType="viewmodels:AddStopViewModel"
             Title="{Binding Title}"
             BackgroundColor="#F5F5F5">
    
    <ScrollView Padding="20,15">
        <VerticalStackLayout Spacing="20">
            
            <!-- Header -->
            <Label Text="Stop Details"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#212121"/>
            
            <!-- Arrival Card -->
            <Border StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="18">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="10" Offset="0,2"/>
                </Border.Shadow>
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ›¬ Arrival"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#4CAF50"/>
                    
                    <!-- Date -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Date"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#424242"/>
                        <Border StrokeThickness="1"
                                Stroke="#E0E0E0"
                                BackgroundColor="#FAFAFA">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <DatePicker Date="{Binding ArrivalDatePicker}"
                                        BackgroundColor="Transparent"
                                        Margin="10,5"/>
                        </Border>
                    </VerticalStackLayout>
                    
                    <!-- Time -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Time"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#424242"/>
                        <Border StrokeThickness="1"
                                Stroke="#E0E0E0"
                                BackgroundColor="#FAFAFA">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <TimePicker Time="{Binding ArrivalTimePicker}"
                                        BackgroundColor="Transparent"
                                        Margin="10,5"/>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Departure Card -->
            <Border StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="18">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="10" Offset="0,2"/>
                </Border.Shadow>
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ›« Departure"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#F44336"/>
                    
                    <!-- Date -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Date"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#424242"/>
                        <Border StrokeThickness="1"
                                Stroke="#E0E0E0"
                                BackgroundColor="#FAFAFA">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <DatePicker Date="{Binding DepartureDatePicker}"
                                        BackgroundColor="Transparent"
                                        Margin="10,5"/>
                        </Border>
                    </VerticalStackLayout>
                    
                    <!-- Time -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Time"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#424242"/>
                        <Border StrokeThickness="1"
                                Stroke="#E0E0E0"
                                BackgroundColor="#FAFAFA">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <TimePicker Time="{Binding DepartureTimePicker}"
                                        BackgroundColor="Transparent"
                                        Margin="10,5"/>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Cost Card -->
            <Border StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="18">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="10" Offset="0,2"/>
                </Border.Shadow>
                
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ’° Estimated Cost"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#FF9800"/>
                    
                    <Border StrokeThickness="1"
                            Stroke="#E0E0E0"
                            BackgroundColor="#FAFAFA">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry Text="{Binding Stop.EstimatedCost}"
                               Keyboard="Numeric"
                               Placeholder="e.g., 500"
                               BackgroundColor="Transparent"
                               FontSize="15"/>
                    </Border>
                </VerticalStackLayout>
            </Border>
            
            <!-- Notes Card -->
            <Border StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="18">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="10" Offset="0,2"/>
                </Border.Shadow>
                
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ“ Notes"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2196F3"/>
                    
                    <Border StrokeThickness="1"
                            Stroke="#E0E0E0"
                            BackgroundColor="#FAFAFA">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Editor Text="{Binding Stop.Notes}"
                                Placeholder="Booking references, ideas..."
                                HeightRequest="130"
                                BackgroundColor="Transparent"
                                FontSize="15"/>
                    </Border>
                </VerticalStackLayout>
            </Border>
            
            <!-- Loading Indicator -->
            <ActivityIndicator IsVisible="{Binding IsBusy}"
                             IsRunning="{Binding IsBusy}"
                             Color="#2196F3"
                             HeightRequest="40"/>
            
            <!-- Save Button -->
            <Border StrokeThickness="0"
                    BackgroundColor="#4CAF50"
                    Margin="0,10,0,20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#4CAF50" Opacity="0.3" Radius="10" Offset="0,4"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SaveStopCommand}"/>
                </Border.GestureRecognizers>
                <Label Text="ðŸ’¾ Save Stop"
                       FontSize="17"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Padding="0,16"/>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>