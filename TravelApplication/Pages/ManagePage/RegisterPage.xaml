<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelApplication.Pages.ManagePage.RegisterPage"
             Padding="0">
    <Grid>
        <!-- Ảnh nền -->
        <Image Source="santorini.png"
               Aspect="AspectFill"
               Opacity="0.9"
               VerticalOptions="Fill" 
               HorizontalOptions="Fill"/>

        <ScrollView>
            <VerticalStackLayout Padding="40,50" Spacing="40">

                <!-- Tiêu đề -->
                <Label Text="Create Account"
                       FontSize="36"
                       TextColor="#28385A"
                       HorizontalOptions="Center" />

                <!-- Logo -->
                <Image Source="icon_rmbg.png"
                       WidthRequest="150"
                       HeightRequest="150"
                       HorizontalOptions="Center" />

                <!-- Tiêu đề -->
                <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Label Text="Welcome Back"
                           FontSize="36"
                           FontAttributes="Bold"
                           TextColor="#283B5A"
                           HorizontalOptions="Center" />

                    <Label Text="Sign in to continue your journey"
                           FontSize="18"
                           TextColor="#283B5A"
                           HorizontalOptions="Center" />
                                </VerticalStackLayout>

                <!-- Khung nhập liệu -->
                <VerticalStackLayout Spacing="20">
        
                    <!-- Username -->
                    <Frame CornerRadius="50"
                           BackgroundColor="White"
                           HeightRequest="60"
                           HasShadow="False"
                           Padding="20,0">
                        <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                            <Image Source="user_icon.png"
                                   WidthRequest="24"
                                   HeightRequest="24"
                                   VerticalOptions="Center" />
                            <Entry x:Name="UsernameEntry" Grid.Column="1"
                                   Placeholder="Username"
                                   PlaceholderColor="#858585"
                                   FontSize="18"
                                   TextColor="Black" />
                        </Grid>
                    </Frame>

                    <!-- Email -->
                    <Frame CornerRadius="50"
                           BackgroundColor="White"
                           HeightRequest="60"
                           HasShadow="False"
                           Padding="20,0">
                        <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                            <Image Source="email_icon.png"
                                   WidthRequest="24"
                                   HeightRequest="24"
                                   VerticalOptions="Center" />
                            <Entry x:Name="EmailEntry" Grid.Column="1"
                                   Placeholder="Email"
                                   PlaceholderColor="#858585"
                                   FontSize="18"
                                   TextColor="Black" />
                        </Grid>
                    </Frame>

                    <!-- Password -->
                    <Frame CornerRadius="50"
                           BackgroundColor="White"
                           HeightRequest="60"
                           HasShadow="False"
                           Padding="20,0">
                        <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                            <Image Source="password_icon.png"
                                   WidthRequest="24"
                                   HeightRequest="24"
                                   VerticalOptions="Center" />
                            <Entry x:Name="PasswordEntry"
                                   Grid.Column="1"
                                   Placeholder="Password"
                                   IsPassword="True"
                                   PlaceholderColor="#858585"
                                   FontSize="18"
                                   TextColor="Black" />
                        </Grid>
                    </Frame>

                    <!-- Retype Password -->
                    <Frame CornerRadius="50"
                           BackgroundColor="White"
                           HeightRequest="60"
                           HasShadow="False"
                           Padding="20,0">
                        <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                            <Image Source="password_icon.png"
                                   WidthRequest="24"
                                   HeightRequest="24"
                                   VerticalOptions="Center" />
                            <Entry x:Name="ConfirmPasswordEntry" Grid.Column="1"
                                   Placeholder="Confirm Password"
                                   IsPassword="True"
                                   PlaceholderColor="#858585"
                                   FontSize="18"
                                   TextColor="Black" />
                        </Grid>
                    </Frame>

                    <!-- Nút Đăng ký -->
                    <Frame CornerRadius="50"
                           HasShadow="True"
                           HeightRequest="65"
                           Padding="0"
                           Margin="0,10,0,0">
                        <Frame.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#EF9B56" Offset="0.0" />
                                <GradientStop Color="#CE6F2D" Offset="1.0" />
                            </LinearGradientBrush>
                        </Frame.Background>

                        <Button Text="Sign Up"
                                FontSize="22"
                                TextColor="White"
                                BackgroundColor="Transparent"
                                Clicked="OnRegisterClicked" />
                    </Frame>
                    <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />
                    <!-- Chuyển sang đăng nhập -->
                    <VerticalStackLayout Spacing="10"
                                         HorizontalOptions="Center"
                                         Margin="0,10,0,0">
                        <Label Text="Already have an account?"
                               TextColor="White"
                               FontSize="18"
                               HorizontalOptions="Center" />
                        <Button Text="Sign In"
                                BackgroundColor="#28385A"
                                TextColor="White"
                                CornerRadius="25"
                                WidthRequest="200"
                                HeightRequest="55"
                                Clicked="OnLoginClicked" />
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>